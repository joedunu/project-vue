{
  "root": true,
  "parserOptions": {
    "sourceType": "module",
    "parser": "babel-eslint",
    "singleQuote": false,
    "semi": false,
    "filePath": "src/**/*.vue"
  },
  "env": {
    "browser": true
  },
  "extends": ["prettier", "prettier/standard", "plugin:vue/recommended"],
  "plugins": ["vue", "prettier"],
  "rules": {
    "prettier/prettier": "error"
  }
}
